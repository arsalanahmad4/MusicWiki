<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="style_rounded_image_view">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.MusicWiki.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CUstomArtistDetailsTheme" parent="Theme.MusicWiki.NoActionBar">
        <item name="CustomChipChoiceStyle">@style/AffiliateCustomChipStyle</item>
    </style>

    <style name="AffiliateCustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/chip_select_unselect_text_color_affiliate</item>
        <item name="chipBackgroundColor">@color/chip_select_unselect_bg_color_affiliate</item>
        <item name="chipStrokeColor">@color/chip_select_unselect_stroke_color_affiliate</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textSize">14sp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="cornerRadius">40dp</item>
    </style>


</resources>